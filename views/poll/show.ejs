<% include ../partials/header %>
    <div class="ui container text">
        <h2 class="ui header center aligned">
            <%= poll.pollName %>
        </h2>
        <div class="ui relaxed grid">
            <div class="six wide column">Vote:
                <form class="ui form" action="/poll/<%= poll._id %>?_method=PUT" method="POST">
                    <div class="grouped fields">
                        <% poll.items.map((item,i) => { %>
                            <div class="field">
                                <div class="ui radio checkbox">
                                    <input type="radio" name="item" checked="" tabindex="0" class="hidden" value="<%= item._id %>">                                  
                                    <label>
                                        <%= item.name %>                                            
                                    </label>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <button type="submit" class="ui button">Vote Now!</button>
                </form>
            </div>
            <div class="ten wide column">
                <canvas id="chart" width="400" height="400"></canvas>
            </div>
        </div>
    </div>

    <script> 
        const poll = <%- JSON.stringify(poll) %>;
        const labelList = poll.items.map(item => item.name);
        const pollCount = poll.items.map(item => item.count);

        $('.ui.radio.checkbox').checkbox();

        var ctx = document.getElementById("chart");
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelList ,
            datasets: [{
                label: '# of Votes',
                data: pollCount,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
    <% include ../partials/footer %>